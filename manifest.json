{
    "manifest_version": 3,
    "name": "Universal Dark Mode Toggle",
    "version": "1.0.0",
    "description": "Enable dark mode on any website instantly. Lightweight, dependency-free, and respects site settings.",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Universal Dark Mode"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "script.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
